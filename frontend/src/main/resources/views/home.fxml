<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.univtln.laure.controllers.Home" stylesheets="@../styles/home.css">

    <!-- BARRE SUPÉRIEURE : bouton recherche -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="searchField" visible="false" />
            <Button fx:id="searchButton" text="🔍" styleClass="search-button" onAction="#searchName"/>
            <Button fx:id="disconectButton" text="Deconnexion" styleClass="disconect-button" onAction="#handleDisconnect" />
        </HBox>
    </top>

    <!-- CENTRE : Message + listes -->
    <center>
        <VBox alignment="CENTER" spacing="30" BorderPane.alignment="CENTER">
            <Label text="Bienvenue dans votre catalogue de films !" styleClass="welcome-text"/>

            <!-- SECTION : Recommandé pour vous -->
            <VBox spacing="10">
                <Label text="Recommandé pour vous" styleClass="section-title"/>
                <HBox spacing="10" alignment="CENTER">

                    <!-- Flèche gauche -->
                    <Button text="◀" styleClass="arrow-button" fx:id="recommendedLeft" onAction="#updateMoviesB"/>

                    <!-- Films -->
                    <HBox spacing="15" alignment="CENTER" fx:id="recommendedContainer">
                        <StackPane fx:id="recommended1" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="recommended2" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="recommended3" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="recommended4" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="recommended5" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="recommended6" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="recommended7" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="recommended8" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                    </HBox>

                    <!-- Flèche droite -->
                    <Button text="▶" styleClass="arrow-button" fx:id="recommendedRight" onAction="#updateMoviesN"/>
                </HBox>
            </VBox>

            <!-- SECTION : D'autres comme vous ont aimé -->
            <VBox spacing="10">
                <Label text="D'autres comme vous ont aimé" styleClass="section-title"/>
                <HBox spacing="10" alignment="CENTER">

                    <!-- Flèche gauche -->
                    <Button text="◀" styleClass="arrow-button" fx:id="likedLeft" onAction="#updateMoviesB"/>

                    <!-- Films -->
                    <HBox spacing="15" alignment="CENTER" fx:id="likedContainer">
                        <StackPane fx:id="liked1" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="liked2" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="liked3" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="liked4" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="liked5" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="liked6" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="liked7" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                        <StackPane fx:id="liked8" styleClass="movie-poster" maxWidth="120" maxHeight="180"/>
                    </HBox>

                    <!-- Flèche droite -->
                    <Button text="▶" styleClass="arrow-button" fx:id="likedRight" onAction="#updateMoviesN"/>
                </HBox>
            </VBox>

        </VBox>
    </center>
</BorderPane>
